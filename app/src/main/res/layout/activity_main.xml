<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.rugbyunionscorecard.MainActivity"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/teamA"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1995AD"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/teamA_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="53sp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="#BCBABE"
                android:layout_marginBottom="24dp"/>
            <Button
                android:id="@+id/teamATry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="try"
                android:textStyle="bold"
                android:onClick="updateTry"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
            <Button
                android:id="@+id/teamAKick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="kick"
                android:textStyle="bold"
                android:onClick="updateKick"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
            <Button
                android:id="@+id/teamAPenalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="penalty"
                android:textStyle="bold"
                android:onClick="updatePenalty"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
            <Button
                android:id="@+id/teamADrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drop"
                android:textStyle="bold"
                android:onClick="updateDrop"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#BCBABE">
        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/teamB"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1995AD"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/teamB_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="53sp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="#BCBABE"
                android:layout_marginBottom="24dp"/>
            <Button
                android:id="@+id/teamBTry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="try"
                android:textStyle="bold"
                android:onClick="updateTry"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
            <Button
                android:id="@+id/teamBKick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="kick"
                android:textStyle="bold"
                android:onClick="updateKick"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
            <Button
                android:id="@+id/teamBPenalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="penalty"
                android:textStyle="bold"
                android:onClick="updatePenalty"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
            <Button
                android:id="@+id/teamBDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drop"
                android:textStyle="bold"
                android:onClick="updateDrop"
                android:layout_marginBottom="8dp"
                android:background="#1995AD"
                android:textColor="#FCFBFE"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FF9800"
        android:layout_marginBottom="35dp"
        android:onClick="reset"/>
</RelativeLayout>
